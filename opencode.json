{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "baymax",
  "permission": {
    "edit": "ask",
    "bash": "ask",
    "webfetch": "ask",
    "external_directory": {
      "{env:HOME}/.config/opencode/AGENTS.md": "allow",
      "{env:HOME}/.config/opencode/skills/*": "allow",
      "{env:HOME}/.config/opencode/agents/*": "allow",
      "{env:HOME}/.config/opencode/commands/*": "allow",
      "*": "ask"
    },
    "skill": {
      "*": "allow"
    }
  },
  "instructions": ["{env:HOME}/.config/opencode/AGENTS.md"],
  "mcp": {
    "notion": {
      "type": "remote",
      "url": "https://mcp.notion.com/mcp",
      "enabled": true
    },
    "vercel": {
      "type": "remote",
      "url": "https://mcp.vercel.com",
      "enabled": true
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp",
      "oauth": false,
      "headers": {
        "Authorization": "Bearer {env:GITHUB_MCP_PAT}"
      },
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "--yes", "@playwright/mcp@latest", "--isolated"],
      "environment": {
        "npm_config_cache": "{env:HOME}/.cache/opencode/npm-playwright",
        "PLAYWRIGHT_HEADLESS": "0"
      },
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "kubernetes": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-kubernetes"],
      "enabled": true
    },
    "docker": {
      "type": "local",
      "command": ["uvx", "docker-mcp"],
      "enabled": true
    },
    "google-workspace": {
      "type": "local",
      "command": ["npx", "-y", "@presto-ai/google-workspace-mcp@1.0.12"],
      "enabled": true
    }
  },
  "agent": {
    "build": {
      "permission": {
        "edit": "ask",
        "bash": "ask",
        "webfetch": "ask",
        "external_directory": {
          "{env:HOME}/.config/opencode/AGENTS.md": "allow",
          "{env:HOME}/.config/opencode/skills/*": "allow",
          "{env:HOME}/.config/opencode/agents/*": "allow",
          "{env:HOME}/.config/opencode/commands/*": "allow",
          "*": "ask"
        }
      }
    },
    "plan": {
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "webfetch": "ask",
        "external_directory": {
          "{env:HOME}/.config/opencode/AGENTS.md": "allow",
          "{env:HOME}/.config/opencode/skills/*": "allow",
          "{env:HOME}/.config/opencode/agents/*": "allow",
          "{env:HOME}/.config/opencode/commands/*": "allow",
          "*": "ask"
        }
      }
    }
  }
}
